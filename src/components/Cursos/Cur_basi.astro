---
import { getCollection } from 'astro:content';
const books = await getCollection('books');
---

<section >
  <br><br><br>
  <main>
    <h1 class="text-center text-7x1 font-extralight">
      <span class="block"></span>
    </h1>
  </main>
  
  <section aria-label="Cursos Basicos">
    <div class=" mx-auto">
      <div class="grid gap-6 md:grid-cols-2">
        {books.map(({ slug, data: { title, img, readtime, description } }) => (
          <article class="flex justify-evenly	">

          <div class="">
            <a href={`/libro/${slug}`} class="mb-2 xl:mb-0 transition hover:scale-110">
              <img class=" w-48 rounded" src={`/${img}`} alt={title} />
            </a>
          </div>

            <div class="flex flex-col justify-center">
              <h2 class="mb-2 text-2xl font-bold leading-tight text-white">{title}</h2>
              <p class="mb-4 text-gray-300 max-w-sm">{description}</p>
              <span class="text-xs">‚è≥ Lectura en {readtime} minutos</span>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</section>
