---
import "@fontsource-variable/mona-sans"; // ✅ Fuente 1
import "@fontsource-variable/hubot-sans"; // ✅ Fuente 2

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-bgDark2">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="https://res.cloudinary.com/daucozfk6/image/upload/v1751057891/Merch3-Logo-black-transparentBG_atavfd.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Merch3 es una plataforma de comercio electrónico que ofrece una amplia gama de productos y servicios relacionados con la moda, tecnología y estilo de vida. Descubre lo último en tendencias y compra con confianza." />
    <title>{title}</title>
  </head>
  <body class="bg-bgDark2">
    <main aria-label="Main content">
      <slot />
    </main>
    <style is:global>
      html {
        font-family: 'Mona Sans', 'Hubot Sans', 'Inter', sans-serif;
        background-color: #26272b;
        overflow-x: hidden;
        scroll-behavior: smooth !important;
      }
    </style>
  </body>
</html>
